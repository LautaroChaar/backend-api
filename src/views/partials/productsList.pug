div.mt-5
    h2(style="color:crimson;" class="text-center") Lista de Productos
    br
    div.table-responsive
        if DB_PRODUCTS.length > 0
            div(class="table-responsive")
                table.table.table-dark
                    tr(class="text-center" style="color: yellow;") 
                        th Id
                        th Producto 
                        th Precio
                        th Imagen
                    each product in DB_PRODUCTS
                        tr
                            td(class="text-center col-3")=product.id
                            td(class="text-center col-3")=product.nombre
                            td(class="text-center col-3")=product.precio
                            td(class="text-center col-3")
                                img(width="30" src=product.foto, alt="")
        else
            h3(class="alert alert-warning text-center") No se encontraron productos
